@model IEnumerable<ReservaViajes.Models.Rutas.Ruta>

@{
    ViewData["Title"] = "compra de tiquetes";
}

<h1>Compra de tiquetes</h1>

<p>
    <a asp-action="BuscarRutas" asp-controller="Buscador" class="btn btn-info">Realizar una busqueda</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.idRuta)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.nombreRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.origen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.costo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaRuta)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.idRuta)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.nombreRuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.origen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.destino)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.costo)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaRuta)
            </td>
            <td>
                    @Html.ActionLink("Realizar compra", "CrearReservas", "Reservas", new { idRuta = item.idRuta }, new { @class = "btn btn-success" })
            </td>
        </tr>
}
    </tbody>
</table>
