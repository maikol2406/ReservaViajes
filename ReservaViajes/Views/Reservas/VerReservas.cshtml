@model IEnumerable<ReservaViajes.Models.Reservas.Reserva>

@{
    ViewData["Title"] = "Ver mis Reservas";
}

<h1>VerReservas</h1>

<p>
    <a asp-action="BuscarRutas" asp-controller="Buscador" class="btn btn-info">Iniciar nueva compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreUsuario)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.idBus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreBus)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.idRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.asientosSeleccionados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.costo)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreUsuario)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.idBus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreBus)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.idRuta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreRuta)
            </td>
            <td>
                @string.Join(", ", item.asientosSeleccionados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo)
            </td>
            <td>
                @if (!item.estado)
                {
                        @Html.ActionLink("Pagar Reserva", "CrearPago", "Pagos", new { idReserva = item.idReserva }, new { @class = "btn btn-danger" })
                }
                else
                {
                        @Html.ActionLink("Ver comprobante", "VerComprobante", "Pagos", new { idReserva = item.idReserva }, new { @class = "btn btn-success" })
                }
            </td>
        </tr>
}
    </tbody>
</table>
