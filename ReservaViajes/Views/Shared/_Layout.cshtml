<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReservaViajes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservaViajes.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <section class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Reserva de Viajes</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <section class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-black btn btn-outline-warning" href="#" id="opcionesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Opciones
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="opcionesDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Rutas" asp-action="VerRutas">Comprar tiquetes</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Buscador" asp-action="BuscarRutas">Buscar viajes</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Reservas" asp-action="VerReservas">Ver mis reservas</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Pagos" asp-action="VerPagos">Ver mis compras</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <section class="d-flex">
                        <partial name="_LoginPartial" />
                    </section>
                </section>
            </section>
        </nav>
    </header>

    <main class="container">
        <section role="main" class="pb-3">
            @RenderBody()
        </section>
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <section class="container text-center">
            <span class="text-muted">&copy; 2024 - Reserva de Viajes - Hecho por Michael Acuña | Programación Avanzada en Web</span>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
